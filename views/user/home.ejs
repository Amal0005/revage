  <div class="container mt-4" style="max-width: 1000px;">
    <div class="row align-items-stretch g-3">
      <% if (newArrivals && newArrivals.length > 0) { %>
        <% newArrivals.forEach(function(product) { %>
          <div class="col-lg-3 col-md-4 col-sm-6"> 
            <a href="/product/<%= product._id %>" class="text-decoration-none">
              <div class="product-card" style="max-height: 380px;">
                <div class="product-image" style="height: 180px; overflow: hidden;">
                  <img src="/uploads/product-images/<%= product.productImage[0] %>" 
                       class="product-image w-100 h-100 object-fit-cover" 
                       alt="<%= product.productName %>">
                  
                  <% if (product.productImage.length > 1) { %>
                    <img src="/uploads/product-images/<%= product.productImage[1] %>" 
                         class="product-image secondary-image w-100 h-100 object-fit-cover" 
                         alt="<%= product.productName %> - Alternative">
                  <% } %>
                </div>

                <div class="product-details p-2">
                  <h3 class="product-name small fw-bold text-truncate mb-1 text-dark"><%= product.productName %></h3>
                  <p class="product-category small mb-1 text-muted">
                    <%= product.category ? product.category.name : 'Uncategorized' %>
                  </p>
                  
                  <div class="price-container mb-2">
                    <% 
                      const productOffer = product.offer && product.offer.percentage ? product.offer.percentage : 0;
                      const categoryOffer = product.category && product.category.categoryOffer ? product.category.categoryOffer : 0;
                      const bestOffer = Math.max(productOffer, categoryOffer);
                    %>
                    
                    <% if (bestOffer > 0) { %>
                      <span class="original-price small">₹<%= product.regularPrice %></span>
                      <span class="sale-price">₹<%= product.salePrice %></span>
                      <span class="offer-badge small">
                        <%= bestOffer %>% OFF
                        <% if (productOffer > categoryOffer) { %>
                        <% } else if (categoryOffer > productOffer) { %>
                        <% } %>
                      </span>
                    <% } else { %>
                      <span class="sale-price">₹<%= product.regularPrice %></span>
                    <% } %>
                  </div>
                </div>
              </div>
            </a>
          </div>
        <% }); %>
      <% } else { %>
        <div class="col-12">
          <div class="alert alert-info text-center">
            <i class="fas fa-info-circle me-2"></i>
            No products available at the moment.
          </div>
        </div>
      <% } %>
    </div>
  </div>

  
</div>

