<%- include("../../views/partials/user/header") %>

<style>
    :root {
        --primary-color: #000000;
        --secondary-color: #333333;
        --background-color: #f8f9fa;
        --white: #ffffff;
        --gray: #cccccc;
        --error: #dc3545;
        --muted: #6c757d;
        --shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    body {
        font-family: 'Arial', sans-serif;
        background-color: var(--background-color);
        margin: 0;
        padding: 0;
        min-height: 100vh;
    }

    .main-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 100px);
        padding: 2rem;
    }

    .card {
        background-color: var(--white);
        border-radius: 10px;
        box-shadow: var(--shadow);
        padding: 0.5rem;
        width: 100%;
        max-width: 400px;
        margin: 0 auto;
    }

    .card-title {
        color: var(--primary-color);
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1rem;
        text-align: center;
    }

    .otp-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }

    .form-group {
        width: 100%;
        margin-bottom: 0.75rem;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid var(--gray);
        border-radius: 5px;
        font-size: 1rem;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
        box-sizing: border-box;
    }

    .form-control:focus {
        outline: none;
        border-color: var(--primary-color);
        box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.1);
    }

    .btn {
        width: 100%;
        padding: 0.875rem;
        border: none;
        border-radius: 5px;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: var(--primary-color);
        color: var(--white);
    }

    .btn-primary:hover {
        background-color: var(--secondary-color);
    }

    .btn-link {
        background-color: transparent;
        color: var(--primary-color);
        text-decoration: underline;
        margin-top: 1rem;
    }

    .btn-link:hover {
        text-decoration: none;
        color: var(--secondary-color);
    }

    .otp-timer-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        margin: 1rem 0;
    }

    .otp-timer {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background-color: var(--background-color);
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--primary-color);
        box-shadow: inset 0 0 0 2px var(--primary-color);
    }

    .alert {
        width: 100%;
        padding: 0.75rem;
        border-radius: 5px;
        margin-bottom: 0.75rem;
        font-size: 0.875rem;
        text-align: center;
    }

    .alert-danger {
        background-color: #fff5f5;
        color: var(--error);
        border: 1px solid #fed7d7;
    }

    .text-muted {
        color: var(--muted);
        text-align: center;
        margin-top: 1rem;
        font-size: 0.875rem;
    }

    .text-muted a {
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
    }

    .text-muted a:hover {
        color: var(--secondary-color);
        text-decoration: underline;
    }

    @media (max-width: 480px) {
        .card {
            padding: 1rem;
        }

        .main-container {
            padding: 1rem;
        }

        .otp-timer {
            width: 50px;
            height: 50px;
            font-size: 1rem;
        }
    }
</style>

<div class="main-container">
    <div class="card">
        <h1 class="card-title">Email Verification</h1>
        <div class="otp-container">
            <% if(locals.message && message.length > 0) { %>
                <div class="alert alert-danger">
                    <%= message %>
                </div>
            <% } %>
            
            <form id="otpForm" onsubmit="return validateOtpForm()">
                <div class="form-group">
                    <label for="otp">Enter OTP:</label>
                    <input type="text" id="otp" name="otp" class="form-control" required>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Verify OTP</button>
                </div>
            </form>
            <div class="otp-timer-wrapper">
                <div class="otp-timer" id="otpTimer"></div>
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-link" onclick="resendOtp()">
                    Resend OTP
                </button>
            </div>
        <% if(locals.message && message.length > 0) { %>
            <div class="alert">
                <%= message %>
            </div>
        <% } %>
        </div>
        <!-- <div class="text-muted">
            Already verified? <a href="/login">Login now</a>
        </div> -->
    </div>
</div>
<%- include("../../views/partials/user/footer") %>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
  let otpTimerInterval;
  let timer = 60;

  function updateTimerColor(percentage) {
      const timerElement = document.getElementById('otpTimer');
      if (percentage > 50) {
          timerElement.style.color = 'green';
      } else if (percentage > 25) {
          timerElement.style.color = '#ffc107';
      } else {
          timerElement.style.color = '#dc3545';
      }
  }

  function startOtpTimer() {
      const timerElement = document.getElementById('otpTimer');
      otpTimerInterval = setInterval(function() {
          const minutes = Math.floor(timer / 60);
          const seconds = timer % 60;
          timerElement.textContent = `${minutes}:${seconds < 10 ? '0' : ''}${seconds}`;
          updateTimerColor((timer / 60) * 100);

          if (--timer < 0) {
              clearInterval(otpTimerInterval);
              timerElement.textContent = "Expired";
              timerElement.style.color = 'red';
          }
      }, 1000);
  }

  function initializeOtpTimer() {
      clearInterval(otpTimerInterval);
      timer = 60;
      startOtpTimer();
  }

  function validateOtpForm() {
    const otpInput = document.getElementById('otp').value.trim();
    
    // Disable the submit button to prevent double submission
    const submitButton = document.querySelector('button[type="submit"]');
    submitButton.disabled = true;

    $.ajax({
        type: 'POST',
        url: '/verify-passwordForgot-otp', // Adjust this URL to match your route exactly
        data: JSON.stringify({ otp: otpInput }),
        contentType: 'application/json',
        success: function(response) {
            if (response.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'OTP Verified Successfully',
                    showConfirmButton: false,
                    timer: 1500
                }).then(() => {
                    window.location.href = response.redirectUrl;
                });
            } else {
                submitButton.disabled = false;
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid OTP',
                    text: response.message || 'Invalid OTP',
                    showConfirmButton: true
                });
            }
        },
        error: function(xhr, status, error) {
            submitButton.disabled = false;
            console.error('AJAX Error:', {
                status: xhr.status,
                responseText: xhr.responseText,
                error: error
            });
            
            let errorMessage = 'Failed to verify OTP. Please try again';
            if (xhr.responseJSON && xhr.responseJSON.message) {
                errorMessage = xhr.responseJSON.message;
            }
            
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: errorMessage,
                showConfirmButton: true
            });
        }
    });
    return false;
}

  // Initialize timer when page loads
  initializeOtpTimer()

  function resendOtp(){
    clearInterval(otpTimerInterval)
    timer=60
    startOtpTimer()
    $.ajax({
      type:'POST',
      url:'/resend.'
    })
  }
</script>